<%-include('partials/head', {title: 'Carrito de Compras'})%>
    <body>
        <%-include('partials/header')%>
        <main>

            <div >
                <div class="bannerPromo">
                    <div id="contenedorPromo">
                        <div class="textoBanner">ENV√çO <strong> GRATIS</strong>  POR COMPRAS SUPERIORES A $250.000</div>
                    </div>
                </div>
            </div>
    
    
             <section class="pets container pt-5 pb-5 ">
                <div>
                    <img class="pet-dog" src="/img/pet-dog2.jpg" alt=""><br/>
                    <h3 class="text-center">Perro</h3>
                </div>
    
                <div>
                    <img class="pet-cat" src="/img/pet-cat.jpg" alt=""><br/>
                    <h3 class="text-center">Gato</h3>
                </div>
    
                <div>
                    <img class="pet-other" src="/img/pet-dog.jpg" alt=""><br/>
                    <h3 class="text-center">Otros</h3>
                </div>
             </section>
             <h1 class="text-center">Carrito De Compras</h1>
            <div class="containerCarrito">
                <div class="cart">
                    <div class="productos">
                        <div class="producto">
                            <img src="/img/golden.png">
                            <div class="infoProducto">
                                <h3 class="nombreProd">Alimento Royal Canin Golden Retriever</h3>
                                <h4 class="precioProd">$10,000</h4>
                                <h4 class="descuento">25%</h4>
                                <p class="cantidadProd">Cantidad: <input value="1" type="number" name="">
                                <p class="eliminarProd">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                    <span class="eliminar">Eliminar</span>
                                </p>
                            </div>
                        </div>
                        <div class="producto">
                            <img src="/img/p1.jpg">
                            <div class="infoProducto">
                                <h3 class="nombreProd">Alimento Royal Canin Bulldog Frances</h3>
                                <h4 class="precioProd">$5,000</h4>
                                <h4 class="descuento">10%</h4>
                                <p class="cantidadProd">Cantidad: <input min="1" type="number" value="1" name="">
                                <p class="eliminarProd">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                    <span class="eliminar">Eliminar</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="totalCart">
                        <p>
                            <span>Cantidad Productos</span>
                            <span id="cantProd">2</span>
                        </p>
                        <p>
                            <span>Precio Total</span>
                            <span id="precioTotal">$12,000</span>
                        </p>
                        <p>
                            <span>Ahorras</span>
                            <span id='ahorro'>$3,000</span>
                        </p>
                        <a href="#" id="botonCompra">Comprar</a>
                    </div>
                </div>
            </div>

            <section class="container-fluid mt-5 pt-5 pb-5 services-section">
                <h2 class="text-center">Servicios</h2>
                
                <div class="services">
                    <img src="/img/PeluqueriaCanina.jpg" alt="">
                    <img src="/img/VETERINARIA.jpg" alt="">
                </div>
        
            </section>
        
            <section class="contact-index d-flex align-items-center justify-content-center">
                    <a href="#">CONTACTANOS</a>
                
            </section>

             </main>

             <%-include('partials/footer')%>
        
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
        
    
</body>
</html>